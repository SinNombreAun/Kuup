
@{
    ViewBag.Title = "Consulta de Producto";
    Layout = "~/Views/Shared/_LayoutMaster.cshtml";
}
<script src="~/Scripts/Producto/ClsProducto.js"></script>
<h2 class="TituloPagina">CONSULTA DE PRODUCTO <i class="fa fa-archive"></i></h2>

<div class="container">
    <div class="row">
        <div class="col-sm-12">
            <table id="Tabla" class="table display nowrap" cellspacing="0" width="100%">
                <thead class="thead-dark">
                    <tr>
                        <th id="NumeroDeProducto" scope="col">@Recursos.Textos.Producto_NumeroDeProducto</th>
                        <th id="CodigoDeBarras" scope="col">@Recursos.Textos.Producto_CodigoDeBarras</th>
                        <th id="NombreDeProducto" scope="col">@Recursos.Textos.Producto_NombreDeProducto</th>
                        <th id="NombreDeTipoDeProducto" scope="col">Tipo de Producto</th>
                        <th id="NombreDeMarca" scope="col">Marca</th>
                        <th id="CantidadDeProductoTotal" scope="col">@Recursos.Textos.Producto_CantidadDeProductoTotal</th>
                        <th id="PrecioUnitario" scope="col">@Recursos.Textos.Producto_PrecioUnitario</th>
                        <th id="TextoAviso" scope="col">@Recursos.Textos.Producto_TextoAviso</th>
                        <th id="TextoCorreoSurtido" scope="col">@Recursos.Textos.Producto_TextoCorreoSurtido</th>
                        <th id="TextoDeEstatus" scope="col">@Recursos.Textos.Producto_TextoDeEstatus</th>
                        <th id="boton"></th>
                    </tr>
                </thead>
            </table>
            <br />
            <hr class="my-4">
            @Html.ActionLink("Alta", "Alta", "Producto", null, new { @class = "btn btn-primary" })
            @Html.ActionLink("Alta Masiva", "Importar", "Producto", null, new { @class = "btn btn-danger" })
            @Html.ActionLink("Actualiza Precios", "ActualizaPrecios", "Producto", null, new { @class = "btn btn-danger" })
            <br />
            <br />
            <br />
        </div>
    </div>
</div>

<script type="text/javascript">
    let ClsProducto;
    $(function () {
        ClsProducto = Objeto.Constructor({
            Funcionalidad: 'INDEX',
            UrlCargaGrid: '@Url.Action("Json", "Producto")',
            UrlDetalle: '@Url.Action("Detalle","Producto")',
            CombosParaTabla: [
                "@Html.Raw(ViewBag.NombreDeTipoDeProducto)",
                "@Html.Raw(ViewBag.TextoAviso)",
                "@Html.Raw(ViewBag.TextoCorreoSurtido)",
                "@Html.Raw(ViewBag.TextoDeEstatus)"
            ]
        });
        ClsProducto.Inicio();
    });
</script>