@model Presentacion.Kuup.Models.UsuarioModel

@{
    ViewBag.Title = "Alta";
    Layout = "~/Views/Shared/_LayoutMaster.cshtml";
}
<div class="container">
    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()
        @Html.ValidationSummary("", new { @class = "text-danger" })
        <fieldset>
            <div class="from-group from-group-margin">
                @Html.LabelFor(model => model.fNombreDePersona, new { @class = "col-sm-3 col-form-label" })
                @Html.TextBoxFor(model => model.fNombreDePersona, new { @class = "form-control" })
            </div>
            <div class="from-group from-group-margin">
                @Html.LabelFor(model => model.fApellidoPaterno, new { @class = "col-sm-3 col-form-label" })
                @Html.TextBoxFor(model => model.fApellidoPaterno, new { @class = "form-control" })
            </div>
            <div class="from-group from-group-margin">
                @Html.LabelFor(model => model.fApellidoMaterno, new { @class = "col-sm-3 col-form-label" })
                @Html.TextBoxFor(model => model.fApellidoMaterno, new { @class = "form-control" })
            </div>
            <div class="from-group from-group-margin">
                @Html.LabelFor(model => model.fNombreDeUsuario, new { @class = "col-sm-3 col-form-label" })
                @Html.TextBoxFor(model => model.fNombreDeUsuario, new { @class = "form-control" })
            </div>
            <div class="from-group from-group-margin">
                @Html.LabelFor(model => model.fCorreoDeUsuario, new { @class = "col-sm-3 col-form-label" })
                @Html.TextBoxFor(model => model.fCorreoDeUsuario, new { @class = "form-control" })
            </div>
            <div class="from-group from-group-margin">
                @Html.LabelFor(model => model.fPasswordUsuario, new { @class = "col-sm-3 col-form-label" })
                @Html.PasswordFor(model => model.fPasswordUsuario, new { @class = "form-control" })
            </div>
            <div class="from-group from-group-margin">
                <label class="col-sm-3 col-form-label" for="fPasswordUsuarioConfirm">Confirmar Contraseña</label>
                <input class="form-control" data-val="true" data-val-required="El campo Contraseña es obligatorio." id="fPasswordUsuarioConfirm" name="fPasswordUsuarioConfirm" type="password">
            </div>
            <input type="submit" class="btn btn-primary" value="Guardar" />
        </fieldset>
    }
</div>