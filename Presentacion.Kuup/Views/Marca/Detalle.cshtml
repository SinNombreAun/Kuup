@model Presentacion.Kuup.Models.MarcaModel

@{
    ViewBag.Title = "Detalle de Marca";
    Layout = "~/Views/Shared/_LayoutMaster.cshtml";
    String TextoComboRequerido = "--SELECCIONE--";
}
<script src="~/Scripts/Marca/ClsMarca.js"></script>
<div class="container">
    <div class="row">
        <div class="col-sm-12">
            <h2 class="TituloPagina">DETALLE DE MARCA <i class="fa fa-archive"></i></h2>
            <fieldset>
                <div class="from-group from-group-margin">
                    @Html.LabelFor(model => model.fNumeroDeMarca, new { @class = "col-sm-3 col-form-label" })
                    @Html.TextBoxFor(model => model.fNumeroDeMarca, new { @class = "form-control", disabled = "disabled", @readonly = "readonly" })
                </div>
                <div class="from-group from-group-margin">
                    @Html.LabelFor(model => model.fNombreDeMarca, new { @class = "col-sm-3 col-form-label" })
                    @Html.TextBoxFor(model => model.fNombreDeMarca, new { @class = "form-control", disabled = "disabled", @readonly = "readonly" })
                </div>
                <div class="from-group from-group-margin">
                    @Html.LabelFor(model => model.fCveDeEstatus, new { @class = "col-sm-3 col-form-label" })
                    @Html.DropDownListFor(model => model.fCveDeEstatus, (IEnumerable<SelectListItem>)ViewBag.CveDeEstatus, TextoComboRequerido, new { @class = "form-control", disabled = "disabled", @readonly = "readonly" })
                </div>
            </fieldset>
            <br />
            <hr class="my-4">
            @Html.ActionLink("Regresar a la Consulta", "Index", "Marca", null, new { @class = "btn btn-secondary" })
            @if (Model.fCveDeEstatus == 1)
            {
                @Html.ActionLink("Edita", "Edita", "Marca", new { Model.NumeroDeMarca }, new { @class = "btn btn-info" })
                <button type="button" class="btn btn-danger" id="Cancelar">Cancelar</button>
            }
            @Html.ActionLink("Alta", "Alta", "Marca", null, new { @class = "btn btn-primary" })
            <br />
            <br />
            <br />
        </div>
    </div>
</div>
<script type="text/javascript">
    let ClsMarca;
    $(function () {
        ClsMarca = Objeto.Constructor({
            Funcionalidad: 'DETALLE',
            UrlDeBaja: '@Url.Action("Baja","Marca")'
        });
        ClsMarca.Inicio();
    });
</script>
