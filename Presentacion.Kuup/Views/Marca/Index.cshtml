
@{
    ViewBag.Title = "Consulta de Marcas";
    Layout = "~/Views/Shared/_LayoutMaster.cshtml";
}
<script src="~/Scripts/Marca/ClsMarca.js"></script>
<h2 class="TituloPagina">CONSULTA DE MARCAS <i class="fa fa-archive"></i></h2>

<div class="container">
    <div class="row">
        <div class="col-sm-12">
            <table id="Tabla" class="table display nowrap" cellspacing="0" width="100%">
                <thead class="thead-dark">
                    <tr>
                        <th id="NumeroDeMarca" scope="col">Número de Marca</th>
                        <th id="NombreDeMarca" scope="col">Nombre de Marca</th>
                        <th id="TextoDeEstatus" scope="col">Estatus</th>
                        <th id="boton"></th>
                    </tr>
                </thead>
            </table>
            <br />
            <hr class="my-4">
            @Html.ActionLink("Alta", "Alta", "Marca", null, new { @class = "btn btn-primary" })
            @Html.ActionLink("Asigna Marcas a Tipos de Poroductos", "Index", "AsignaMarca", new { Origen = "Marca" }, new { @class = "btn btn-danger" })
            <br />
            <br />
            <br />
        </div>
    </div>
</div>
<script type="text/javascript">
    let ClsMarca;
    $(function () {
        ClsMarca = Objeto.Constructor({
            Funcionalidad: 'INDEX',
            UrlCargaGrid: '@Url.Action("Json", "Marca")',
            UrlDetalle: '@Url.Action("Detalle","Marca")',
            CombosParaTabla: [
                "@Html.Raw(ViewBag.TextoDeEstatus)"
            ]
        });
        ClsMarca.Inicio();
    });
</script>
