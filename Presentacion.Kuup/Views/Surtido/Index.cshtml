
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_LayoutMaster.cshtml";
}
<script src="~/Scripts/Surtido/ClsSurtido.js"></script>
<h2 class="TituloPagina">SURTIR PRODUCTO <i class="fas fa-calculator"></i></h2>

<div class="container">
    <div class="row">
        <div class="col-sm-12">
            <table id="Tabla" class="table display nowrap" cellspacing="0" width="100%">
                <thead class="thead-dark">
                    <tr>
                        <th id="FolioDeSurtido" scope="col">Folio de Surtido</th>
                        <th id="NombreDeProducto" scope="col">Nombre de Producto</th>
                        <th id="NombreDeQuienSurtio" scope="col">Nombre de Quien Surtio</th>
                        <th id="CantidadNueva" scope="col">Cantidad Nueva</th>
                        <th id="FechaDeSurtido" scope="col">Fecha de Surtido</th>
                        <th id="TextoDeEstatus" scope="col">Estatus</th>
                    </tr>
                </thead>
            </table>
            <br />
            <hr class="my-4">
            @Html.ActionLink("Surtir", "Alta", "Surtido", null, new { @class = "btn btn-primary" })
            <br />
            <br />
            <br />
        </div>
    </div>
</div>

<script type="text/javascript">
    let ClsProducto;
    $(function () {
        ClsSurtido = Objeto.Constructor({
            Funcionalidad: 'INDEX',
            UrlCargaGrid: '@Url.Action("Json", "Surtido")',
            UrlDetalle: '@Url.Action("Detalle","Surtido")',
            CombosParaTabla: [
                "@Html.Raw(@ViewBag.TextoDeEstatus)"
            ]
        });
        ClsSurtido.Inicio();
    });
</script>
