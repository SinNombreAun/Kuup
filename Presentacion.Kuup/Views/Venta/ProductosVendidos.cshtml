
@{
    ViewBag.Title = "ProductosVendidos";
    Layout = "~/Views/Shared/_LayoutMaster.cshtml";
}
<script src="~/Scripts/Venta/ClsRepProductos.js"></script>
<h2 class="TituloPagina">CONSULTA DE PRODUCTOS VENDIDOS <i class="fa fa-archive"></i></h2>

<div class="container">
    <div class="row">
        <div class="col">
            <div class="from-group from-group-margin">
                @Html.Label("fFechaInicial", "Fecha de Inicio", new { @class = "col-sm col-form-label" })
                @Html.TextBox("fFechaInicial", null, new { @class = "form-control datetimepicker", autocomplete = "off" })
            </div>
        </div>
        <div class="col">
            <div class="from-group from-group-margin">
                @Html.Label("fFechaFinal", "Fecha de Final", new { @class = "col-sm col-form-label" })
                @Html.TextBox("fFechaFinal", null, new { @class = "form-control datetimepicker", autocomplete = "off" })
            </div>
        </div>
        <div class="col-sm-12">
            <button type="button" id="Consulta" class="btn btn-primary">Consultar</button>
            <br />
            <br />
            <canvas id="GraficaProductos"></canvas>
            <br />
            <br />
            <button type="button" id="GeneraReporte" class="btn btn-secondary">Generar Reporte</button>
            <br />
            <br />
            <table id="ProductosVendidos" class="table display nowrap" cellspacing="0" width="100%">
                <thead class="thead-dark">
                    <tr>
                        <th scope="col">Número de Producto</th>
                        <th scope="col">Codigo de Barras</th>
                        <th scope="col">Nombre de Producto</th>
                        <th scope="col">Cantidad Vendida</th>
                        <th scope="col">Estatus</th>
                    </tr>
                </thead>
                <tfoot class="thead-dark">
                    <tr>
                        <th scope="col">Número de Producto</th>
                        <th scope="col">Codigo de Barras</th>
                        <th scope="col">Nombre de Producto</th>
                        <th scope="col">Cantidad Vendida</th>
                        <th scope="col">Estatus</th>
                    </tr>
                </tfoot>
            </table>
            <hr class="my-4">
            <br />
            <br />
            <br />
        </div>
    </div>
</div>

<script type="text/javascript">
    let ClsRepProductos;
    $(function () {
        ClsRepProductos = Objeto.Constructor({
            Funcionalidad: 'INDEX',
            UrlCargaGrid: '@Url.Action("ObtenProducto", "Venta")',
            UrlGeneraReporte: '@Url.Action("ReporteVenta", "Venta")',
            FechaInicialLimite: '@ViewBag.FechaInicialLimite'
        });
        ClsRepProductos.Inicio();
    });
</script>
