@model Presentacion.Kuup.Models.AccountModel

@{
    ViewBag.Title = Recursos.Textos.Account_Titulo;
    Layout = "~/Views/_LayoutPage.cshtml";
}
<div class="header-w3l">
    <h1>@Recursos.Textos.Account_Kuup</h1>
</div>
<div class="main-w3layouts-agileinfo">
    <div class="wthree-form">
        <h2>@Recursos.Textos.Account_IniciarSecion</h2>
        @using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            <div class="form-sub-w3">
                @Html.TextBoxFor(model => model.NombreDeUsuario, new { @placeholder = "Nombre de Usuario", required = "required", autocomplete = "username" })
                <div class="icon-w3">
                    <i class="fa fa-user" aria-hidden="true"></i>
                </div>
            </div>
            <div class="form-sub-w3">
                @Html.PasswordFor(model => model.Password, new { @placeholder = "Contraseña", required = "required", autocomplete = "current-password" })
                <div class="icon-w3">
                    <i class="fa fa-unlock-alt" aria-hidden="true"></i>
                </div>
            </div>
            <div style="color: #fff;">@ViewData["Informacion"]</div>
            <div class="clear"></div>
            <div class="submit-agileits">
                <input type="submit" value="@Recursos.Textos.Account_Boton_IniciarSecion">
            </div>
        }
    </div>
</div>
<div class="footer">
    <p>&copy; @Html.Raw(Recursos.Textos.Kuup_Aplicacion)</p>
</div>